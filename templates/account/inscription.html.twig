{% extends 'base.html.twig' %}
{% block title %}Inscription{% endblock %}
{% block body %}
    <div style="text-align: center;">
    <div class="jumbotron" style="width:600px;margin-top:100px;">
        <div style="text-align: center;"><h4>Inscrivez vous sur notre site</h4></div>
        {{ form_start(form) }}

        {{ form_row(form.pseudo, {'label': 'Nom d\'utilisateur','attr': {'placeholder': 'Nom d\'utilisateur...', 'class':'form-control inp'}}) }}
        {{ form_row(form.motDePasse, {'label': 'Mot de passe', 'attr': {'placeholder': 'Votre mot de passe...','class':'form-control inp'}}) }}
        {{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe', 'attr': {'placeholder': 'Répétez votre mot de passe','class':'form-control inp'}}) }}
        {{ form_row(form.sexe, {'label': 'Votre sexe', 'attr': {'placeholder': 'Votre sexe...', 'class':'inp'}}) }}
        {{ form_row(form.ville, {'label': 'Sélectionnez la ville', 'attr': {'placeholder' : 'Votre ville...','class':'form-control inp'}})}}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-success" style="margin-top: 20px;">Confirmer l'inscription</button>

        {{ form_end(form) }}
    </div>
    </div>
{% endblock %}